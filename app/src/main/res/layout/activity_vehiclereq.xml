<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ash"
    tools:context=".vehiclereq">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="12sp"
        android:text="Request a Vehicle"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"></TextView>


    <TextView

        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="593dp"
        android:text="Tell Us What Do You Want "
        android:textColor="@color/teal_200"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/decelerate"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="374dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="291dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Destination"
        android:inputType="textPersonName"
        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <Button
        android:id="@+id/map"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="650sp"
        android:text="Set Location"
        app:backgroundTint="@color/gradStop" />

    <EditText
        android:id="@+id/acnonacstat"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="494dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="183dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="A/C non A/C"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <EditText
        android:id="@+id/passengers"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="369dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="No of Passengers"
        android:inputType="textEmailAddress"
        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="524dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Phone No"
        android:inputType="phone"
        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="598dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"

        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <EditText
        android:id="@+id/dateandtime"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="440dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="Required Date and Time "
        android:inputType="date"
        android:textColor="#8E8644"
        android:textColorHint="#A1873B" />

    <Button
        android:id="@+id/normal"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="257dp"
        android:layout_marginRight="257dp"
        android:layout_marginBottom="41dp"
        android:text="Done" />

    <Button
        android:id="@+id/bounce"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="40dp"
        android:text="Back"
        android:onClick="sendtodash"
        app:backgroundTint="@color/colorPrimaryDark"/>


</RelativeLayout>